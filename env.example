# ===========================================
# DOMAIN MANAGEMENT SYSTEM - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/domain-management-system
# Alternative: MongoDB Atlas connection string
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/domain-management-system?retryWrites=true&w=majority

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# JWT secret for authentication (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# NextAuth.js secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-here

# NextAuth.js URL (your domain)
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# RESELLERCLUB API CONFIGURATION
# ===========================================
# ResellerClub API credentials
RESELLERCLUB_USERNAME=your-resellerclub-username
RESELLERCLUB_PASSWORD=your-resellerclub-password
RESELLERCLUB_API_KEY=your-resellerclub-api-key

# ResellerClub API base URL
RESELLERCLUB_API_URL=https://httpapi.com/api

# ResellerClub Reseller ID (your account ID)
RESELLERCLUB_RESELLER_ID=your-reseller-id

# ResellerClub default customer ID (for testing/fallback)
RESELLERCLUB_DEFAULT_CUSTOMER_ID=19532562

# ===========================================
# RAZORPAY PAYMENT CONFIGURATION
# ===========================================
# Razorpay API credentials
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Razorpay webhook secret (for payment verification)
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# SMTP settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Alternative: SendGrid configuration
# SENDGRID_API_KEY=your-sendgrid-api-key

# Admin email for notifications
ADMIN_EMAIL=admin@yourdomain.com

# Support email for customer inquiries
SUPPORT_EMAIL=support@yourdomain.com

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Application environment
NODE_ENV=development

# Application port (default: 3000)
PORT=3000

# Application URL
APP_URL=http://localhost:3000

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable testing mode (true/false)
TESTING_MODE=false

# Enable/disable email notifications (true/false)
ENABLE_EMAIL_NOTIFICATIONS=true

# Enable/disable admin notifications (true/false)
ENABLE_ADMIN_NOTIFICATIONS=true

# ===========================================
# DNS CONFIGURATION
# ===========================================
# Default nameservers for domain registration
DEFAULT_NAMESERVER_1=ns1.yourdomain.com
DEFAULT_NAMESERVER_2=ns2.yourdomain.com
DEFAULT_NAMESERVER_3=ns3.yourdomain.com
DEFAULT_NAMESERVER_4=ns4.yourdomain.com

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable/disable detailed API logging
ENABLE_API_LOGGING=true

# ===========================================
# RATE LIMITING
# ===========================================
# API rate limiting (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# ===========================================
# CACHE CONFIGURATION
# ===========================================
# Redis connection string (optional, for caching)
# REDIS_URL=redis://localhost:6379

# Cache TTL in seconds
CACHE_TTL=3600

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
# Google Analytics ID (optional)
# GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Maximum file upload size (in bytes)
MAX_FILE_SIZE=10485760

# Allowed file types for uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
# Backup frequency (daily, weekly, monthly)
BACKUP_FREQUENCY=daily

# Backup retention days
BACKUP_RETENTION_DAYS=30

# ===========================================
# SECURITY HEADERS
# ===========================================
# Content Security Policy
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Enable/disable development tools
ENABLE_DEV_TOOLS=true

# Enable/disable hot reload
ENABLE_HOT_RELOAD=true

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
# Enable/disable production optimizations
ENABLE_PRODUCTION_OPTIMIZATIONS=false

# CDN URL for static assets (optional)
# CDN_URL=https://cdn.yourdomain.com

# ===========================================
# NOTIFICATION SETTINGS
# ===========================================
# Email templates directory
EMAIL_TEMPLATES_DIR=./templates/email

# Notification retry attempts
NOTIFICATION_RETRY_ATTEMPTS=3

# Notification retry delay (in milliseconds)
NOTIFICATION_RETRY_DELAY=5000

# ===========================================
# DOMAIN REGISTRATION SETTINGS
# ===========================================
# Default registration period (in years)
DEFAULT_REGISTRATION_PERIOD=1

# Auto-renewal enabled by default
AUTO_RENEWAL_ENABLED=true

# Domain transfer settings
ENABLE_DOMAIN_TRANSFERS=true

# ===========================================
# PAYMENT SETTINGS
# ===========================================
# Currency for payments
DEFAULT_CURRENCY=INR

# Payment timeout (in minutes)
PAYMENT_TIMEOUT=15

# Refund processing time (in days)
REFUND_PROCESSING_DAYS=3

# ===========================================
# API RATE LIMITING PER ENDPOINT
# ===========================================
# Domain search rate limit
DOMAIN_SEARCH_RATE_LIMIT=60

# Domain registration rate limit
DOMAIN_REGISTRATION_RATE_LIMIT=10

# Payment verification rate limit
PAYMENT_VERIFICATION_RATE_LIMIT=30

# ===========================================
# MONITORING ENDPOINTS
# ===========================================
# Health check endpoint
HEALTH_CHECK_ENDPOINT=/api/health

# Metrics endpoint
METRICS_ENDPOINT=/api/metrics

# ===========================================
# CUSTOMIZATION
# ===========================================
# Company name
COMPANY_NAME=Your Company Name

# Company logo URL
COMPANY_LOGO_URL=https://yourdomain.com/logo.png

# Support phone number
SUPPORT_PHONE=+1-234-567-8900

# Business hours
BUSINESS_HOURS=9:00 AM - 6:00 PM (Mon-Fri)

# ===========================================
# LEGAL & COMPLIANCE
# ===========================================
# Terms of service URL
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms

# Privacy policy URL
PRIVACY_POLICY_URL=https://yourdomain.com/privacy

# GDPR compliance
GDPR_COMPLIANCE_ENABLED=true

# Data retention period (in days)
DATA_RETENTION_DAYS=2555

# ===========================================
# BACKUP & RECOVERY
# ===========================================
# Backup storage location
BACKUP_STORAGE_PATH=./backups

# Enable automated backups
AUTOMATED_BACKUPS_ENABLED=true

# Backup encryption key
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# ===========================================
# INTEGRATION SETTINGS
# ===========================================
# Webhook endpoints for external integrations
WEBHOOK_DOMAIN_REGISTRATION=https://yourdomain.com/webhooks/domain-registered
WEBHOOK_PAYMENT_SUCCESS=https://yourdomain.com/webhooks/payment-success
WEBHOOK_PAYMENT_FAILED=https://yourdomain.com/webhooks/payment-failed

# Third-party API keys
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token

# ===========================================
# NOTES
# ===========================================
# 1. Replace all placeholder values with your actual credentials
# 2. Never commit this file with real credentials to version control
# 3. Use strong, unique passwords and API keys
# 4. Regularly rotate your API keys and secrets
# 5. Use environment-specific values for development, staging, and production
# 6. Consider using a secrets management service for production deployments
# 7. Test all configurations before deploying to production
