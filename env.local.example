# ===========================================
# MINIMAL ENVIRONMENT SETUP
# ===========================================
# Copy this to .env.local for quick development setup

# ===========================================
# REQUIRED - DATABASE
# ===========================================
MONGODB_URI=mongodb://localhost:27017/domain-management-system

# ===========================================
# REQUIRED - AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# REQUIRED - RESELLERCLUB API
# ===========================================
RESELLERCLUB_USERNAME=your-resellerclub-username
RESELLERCLUB_PASSWORD=your-resellerclub-password
RESELLERCLUB_API_KEY=your-resellerclub-api-key
RESELLERCLUB_API_URL=https://httpapi.com/api
RESELLERCLUB_RESELLER_ID=your-reseller-id

# ===========================================
# REQUIRED - RAZORPAY PAYMENT
# ===========================================
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# ===========================================
# REQUIRED - EMAIL
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ADMIN_EMAIL=admin@yourdomain.com

# ===========================================
# OPTIONAL - FEATURE FLAGS
# ===========================================
# Note: Email notifications are always enabled

# ===========================================
# OPTIONAL - APPLICATION
# ===========================================
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
